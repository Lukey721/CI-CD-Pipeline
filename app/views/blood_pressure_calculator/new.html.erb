<h1>Blood Pressure Calculator</h1>

<div class="form-container">
  <%= form_with url: root_path, method: :post, local: true, data: { turbo: false } do %>

    <div class="form-group">
      <%= label_tag :systolic, "Systolic (top number)" %>
      <%= number_field_tag :systolic, nil, min: 70, max: 190, required: true, id: 'systolic', placeholder: "Enter systolic value" %>
    </div>

    <div class="form-group">
      <%= label_tag :diastolic, "Diastolic (bottom number)" %>
      <%= number_field_tag :diastolic, nil, min: 40, max: 100, required: true, id: 'diastolic', placeholder: "Enter diastolic value" %>
    </div>

    <div class="form-group">
      <%= submit_tag "Calculate", class: "submit-button" %>
    </div>

  <% end %>
</div>

<h2>Your Blood Pressure Result:</h2>

<% if @error_message %>
  <p class="error-message"><%= @error_message %></p>
<% else %>
  <p class="<%= @css_class %> result-message"><strong><%= @category %></strong></p>
<% end %>