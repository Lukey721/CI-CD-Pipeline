<%# This is the home page where user will enter value and get a answer%>
<h1>Blood Pressure Calculator - updated</h1>

<%= form_with url: root_path, method: :post, local: true, data: { turbo: false } do %>
  <div>
    <%= label_tag :systolic, "Systolic (top number)" %>
    <%= number_field_tag :systolic, nil, min: 70, max: 190, required: true, id: 'systolic' %>
  </div>

  <div>
    <%= label_tag :diastolic, "Diastolic (bottom number)" %>
    <%= number_field_tag :diastolic, nil, min: 40, max: 100, required: true, id: 'diastolic'%>
  </div>

  <div>
    <%= submit_tag "Calculate" %>
  </div>
<% end %>

<h2>Your Blood Pressure Result:</h2>
<% if @error_message %>
  <p class="error-message"><%= @error_message %></p>
<% else %>
<p class="<%= @css_class %>"><strong><%= @category %></strong></p>
<% end %>